def get_pwd():
    f = open("code_secret.txt", "r")
    read_file = f.read()
    return read_file
    f.close()

def change_code_secret():
    f = open("code_secret.txt", "w")

    f.write(str(input()))

    f.close()

def code_secret():
    f = open("code_secret.txt", "r+")
    file = f.read()

    if file == "":
        print("insert code:")
        change_code_secret()
    else:
        print(file)

    f.close()

